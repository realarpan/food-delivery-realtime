# ==========================================
# FOOD DELIVERY REAL-TIME PLATFORM - ENVIRONMENT VARIABLES
# ==========================================

# ==========================================
# DATABASE CONFIGURATION
# ==========================================
MONGODB_URI=mongodb://localhost:27017/food_delivery
REDIS_URL=redis://localhost:6379
MONGODB_TEST_URI=mongodb://localhost:27017/food_delivery_test

# ==========================================
# AUTHENTICATION
# ==========================================
JWT_SECRET=your_jwt_secret_key_here_change_in_production
TOTP_SECRET=your_totp_secret_key_here_change_in_production
SALT_ROUNDS=12
SESSION_SECRET=your_session_secret_here
MAX_LOGIN_ATTEMPTS=5
LOCKOUT_DURATION=900000 # 15 minutes

# ==========================================
# STRIPE PAYMENTS
# ==========================================
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key_here
STRIPE_PUBLISHABLE_KEY=pk_test_your_publishable_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here
STRIPE_PRICE_ID=price_your_price_id_here
CURRENCY=usd

# ==========================================
# SOCKET.IO CONFIGURATION
# ==========================================
SOCKET_IO_CORS_ORIGIN=http://localhost:3000
SOCKET_IO_PORT=3001
SOCKET_IO_PING_INTERVAL=25000
SOCKET_IO_PING_TIMEOUT=60000

# ==========================================
# FACE RECOGNITION
# ==========================================
FACE_API_MODELS_PATH=./public/models
FACE_API_THRESHOLD=0.6

# ==========================================
# APPLICATION
# ==========================================
NEXT_PUBLIC_API_URL=http://localhost:3000
PORT=3000
NODE_ENV=development
APP_NAME=Food Delivery Real-time
APP_VERSION=1.0.0

# ==========================================
# SECURITY
# ==========================================
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001
CONTENT_SECURITY_POLICY="default-src 'self'; script-src 'self' 'unsafe-inline' 'unsafe-eval' https://*.stripe.com; style-src 'self' 'unsafe-inline' https://*.stripe.com; img-src 'self' data: https:; font-src 'self' https:; connect-src 'self' https://*.stripe.com; frame-src https://*.stripe.com;"

# ==========================================
# EMAIL (Optional)
# ==========================================
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your_email@gmail.com
EMAIL_PASSWORD=your_email_password
EMAIL_FROM=noreply@food-delivery.com

# ==========================================
# RATE LIMITING
# ==========================================
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW_MS=15 * 60 * 1000

# ==========================================
# LOGGING
# ==========================================
LOG_LEVEL=info
LOG_FORMAT=json

# ==========================================
# DEBUGGING
# ==========================================
DEBUG=food-delivery:*
